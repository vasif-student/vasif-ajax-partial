@model ajaxPartialProj.ViewModels.ProductIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="product-list-title">
        <div class="container py-4">
            <div class="row py-5">
                <div class="col-12">
                    <h1>Product List</h1>
                    <i class="text-muted">Where flowers are our inspiration</i>
                </div>
            </div>
        </div>
    </section>
    <section id="product-list">
        <input id="skipCount" type="hidden" value="@ViewBag.skipCount" />
        <div class="container">
            <div class="row" id="products-cont">
                <partial name="_PartialProduct" model="Model.Products"/>
            </div>
            <div class="justify-content-center d-flex">
                <a id="loadmorebtn" class="btn btn-primary" asp-controller="Product" asp-action="Index">Load More</a>
            </div>
        </div>
    </section>
</main>